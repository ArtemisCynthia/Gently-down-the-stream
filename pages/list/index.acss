  display: flex;
  height: 170rpx;
  width: 170rpx;
  margin-left: 41rpx;
  margin-right: 18rpx;
  justify-content: center;
  align-items: center;
}
.item-right{
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  margin-right: 50rpx;
  height: 170rpx;
  width: 170rpx;
}

.amd-avatar-src{
